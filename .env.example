# ========================================
# Neighborhood Community Help Portal
# Environment Variables Example
# ========================================
# Copy this file to .env and update the values

# ========================================
# Server Configuration
# ========================================
NODE_ENV=development
PORT=3001

# ========================================
# Database Configuration
# ========================================
# MySQL connection details
DB_HOST=localhost
DB_PORT=3306
DB_USER=neighborhood_user
DB_PASSWORD=your_secure_password_here
DB_NAME=neighborhood_portal
DB_ROOT_PASSWORD=your_root_password_here

# ========================================
# JWT & Authentication
# ========================================
# Generate a strong secret key for JWT tokens
# You can use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# ========================================
# Frontend Configuration
# ========================================
FRONTEND_PORT=80

# ========================================
# Better Auth Configuration
# ========================================
# Cookie prefix for session management
COOKIE_PREFIX=help_hive

# Session configuration
SESSION_MAX_AGE=604800

# ========================================
# CORS Configuration (Optional)
# ========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:80

# ========================================
# Email Configuration (Optional - for future use)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@neighborhood-portal.com

# ========================================
# File Upload Configuration (Optional)
# ========================================
# MAX_FILE_SIZE=5242880
# UPLOAD_DIR=./uploads

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info

# ========================================
# Security
# ========================================
# Rate limiting (requests per minute)
RATE_LIMIT=100

# ========================================
# Docker-specific (used in docker-compose.yml)
# ========================================
# These are used when running with Docker Compose
# COMPOSE_PROJECT_NAME=neighborhood-portal
